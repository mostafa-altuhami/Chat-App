<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingStart="16dp"
    android:paddingTop="12dp"
    android:paddingEnd="16dp"
    android:paddingBottom="12dp">


        <include layout="@layout/profile_pic_view"
            android:id="@+id/chatFragmentRvIvPhoto"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/chatFragmentRvTvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="User Name"
            app:layout_constraintStart_toEndOf="@id/chatFragmentRvIvPhoto"
            app:layout_constraintTop_toTopOf="@id/chatFragmentRvIvPhoto"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginStart="6dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/chatFragmentRvTvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="the message"
            app:layout_constraintTop_toBottomOf="@id/chatFragmentRvTvUsername"
            app:layout_constraintStart_toStartOf="@id/chatFragmentRvTvUsername"
            android:layout_marginStart="6dp"
            android:textSize="14sp"/>


        <TextView
            android:id="@+id/chatFragmentRvTvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="10:00"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/chatFragmentRvTvUsername"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.8"
           />

        <TextView
            android:id="@+id/chatFragmentRvTvUnreadCount"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/teal"
            tools:text="23"
            android:textColor="@color/white"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/chatFragmentRvTvTime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.8"
            android:layout_marginTop="4dp"
            />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:background="@color/teal_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chatFragmentRvTvDescription" />



</androidx.constraintlayout.widget.ConstraintLayout>