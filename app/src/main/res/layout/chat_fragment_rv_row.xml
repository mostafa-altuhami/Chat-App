<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="4dp"
    app:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <include layout="@layout/profile_pic_view"
            android:id="@+id/chatFragmentRvIvPhoto"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/chatFragmentRvTvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="User Name"
            app:layout_constraintStart_toEndOf="@id/chatFragmentRvIvPhoto"
            app:layout_constraintTop_toTopOf="@id/chatFragmentRvIvPhoto"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginStart="6dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/chatFragmentRvTvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="the message"
            app:layout_constraintTop_toBottomOf="@id/chatFragmentRvTvUsername"
            app:layout_constraintStart_toStartOf="@id/chatFragmentRvTvUsername"
            android:layout_marginStart="6dp"
            android:textSize="14sp"/>


        <TextView
            android:id="@+id/chatFragmentRvTvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="10:00"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/chatFragmentRvIvPhoto"/>

        <TextView
            android:id="@+id/chatFragmentRvTvUnreadCount"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/circular_background"
            android:backgroundTint="@color/my_primary"
            tools:text="23"
            android:textColor="@color/white"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="35dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>